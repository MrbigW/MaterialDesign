<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wrk.materialanimation.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:onClick="enterTransitionActivity"
        android:padding="5dp"
        android:text="Transition"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:onClick="enterSharedElementActivity"
        android:padding="5dp"
        android:text="Shared Elements"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:onClick="enterRevealActivity"
        android:padding="5dp"
        android:text="Circular Reveal Animation"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="SharedElementActivity"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>


</LinearLayout>
